<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>AUNTIE-AUN Restaurant</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <div class="navbar">
      <a href="/">Menu</a>
      <a href="/cart">Cart</a>
    </div>
  </header>

  <h1 class="title">AUNTIE-AUN Restaurant</h1>

  <div class="menu-container">
    <% menu.forEach(item => { %>
      <div class="card">
        <img src="<%= item.image_url %>" alt="<%= item.name %>">
        <div class="info">
          <h2><%= item.name %></h2>
          <p><%= item.description %></p>
          <div class="price-add">
            <span><%= item.price %> THB</span>
            <a href="/add/<%= item.product_id %>" class="btn">Add to Cart</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
